{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react",
		"lib": ["es2021", "dom"],
		"allowJs": true,
		"allowImportingTsExtensions": true
	},
	"include": ["src/**/*", "types**/*"],
	"exclude": ["node_modules"]
}
